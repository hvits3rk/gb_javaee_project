    <!-- == servlets == -->
    <!-- /main -->
    <servlet>
        <servlet-name>Main</servlet-name>
        <servlet-class>com.romantupikov.simpleapp.servlet.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Main</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Main</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Main</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <!-- /catalog -->
    <servlet>
        <servlet-name>Catalog</servlet-name>
        <servlet-class>com.romantupikov.simpleapp.servlet.CatalogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Catalog</servlet-name>
        <url-pattern>/catalog</url-pattern>
    </servlet-mapping>

    <!-- /cart -->
    <servlet>
        <servlet-name>Cart</servlet-name>
        <servlet-class>com.romantupikov.simpleapp.servlet.CartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <!-- /product -->
    <servlet>
        <servlet-name>Product</servlet-name>
        <servlet-class>com.romantupikov.simpleapp.servlet.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Product</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>

    <!-- /order -->
    <servlet>
        <servlet-name>Order</servlet-name>
        <servlet-class>com.romantupikov.simpleapp.servlet.OrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Order</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>

    <!-- == errors == -->
    <error-page>
        <error-code>403</error-code>
        <location>/error/403.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>
</web-app>
